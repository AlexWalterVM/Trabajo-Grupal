class Empresa:
    def __init__(self,nom="Alixe", ruc="0000e", telf=0, direc=" ",dep= " ", empl= " ",rsocial=" "):
        self.nombre=nom
        self.ruc=ruc
        self.telefono=telf
        self.direccion=direc
        self.departamento=dep
        self.empleado=empl
        self.razonSocial=rsocial

    def mostrarEmpresa(self):
        print("Empresa {:20} Ruc:{}".format(self.nombre , self.ruc))

        

